#!/usr/bin/env bash
echo "-----> Installing MuPDF 1.3"
cd $1
# download the binary (-O) silently (-s)
curl https://transfer.sh/kmsww/mupdf.tar.gz -O -s
mkdir -p vendor/mupdf
tar -C vendor/mupdf -xvf mupdf.tar.gz
rm mupdf.tar.gz

curl https://transfer.sh/UOm2F/opencv.tar.gz
tar -C vendor/mupdf -xvf opencv.tar.gz
rm opencv.tar.gz
